---
import Head from "../katachi/head.astro"
import Body from "../katachi/body.astro"

import * as hitotsu from "../kiroku/hitotsu.mdx"

type ftttype = {
  frontmatter: {
    title: string,
    date: string,
    id: string
  }
}

const futatsu: ftttype[] = Object.values(import.meta.glob('../kiroku/*.mdx', { eager: true }))
---

<html>
  <Head>
    <title>記録</title>
  </Head>
  <Body>
    <div class="p-4">
      <h1 class="text-2xl">記録</h1>
      <h2 class="text-lg text-neutral-600">色んなことを書きたい</h2>
      <div>
        <div>
          {futatsu.map(futatsu => {
            return (
              <div>
                <a href={futatsu.frontmatter.id} class="text-lg font-medium">{futatsu.frontmatter.title}</a>
                <p class="text-lg text-neutral-600">{futatsu.frontmatter.date}</p>
              </div>
            )
          })}
        </div>
        <div>
          <hitotsu.Content/>
        </div>
      </div>
    </div>
  </Body>
</html>
