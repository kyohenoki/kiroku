---
import Head from "../katachi/head.astro"
import Body from "../katachi/body.astro"

const futatsu: ftttype[] = Object.values(import.meta.glob('./kiroku/*.mdx', { eager: true }))

type ftttype = {
  frontmatter: {
    title: string,
    date: string
  }
}
---

<html>
  <Head>
    <title>記録</title>
  </Head>
  <Body>
    <div class="p-4">
      <h1 class="text-2xl">記録 Kiroku</h1>
      <h2 class="text-lg text-neutral-600">色んなことを書きたいです</h2>
      <div>
        <div>
          {futatsu.map(futatsu => {
            return (
              <div>
                <a>{futatsu.frontmatter.title}</a>
                <p>{futatsu.frontmatter.date}</p>
              </div>
            )
          })}
        </div>
      </div>
    </div>
  </Body>
</html>
